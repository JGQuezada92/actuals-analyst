# ============================================================
# NetSuite Financial Analyst Agent - Configuration
# ============================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================================
# MODEL SELECTION
# ============================================================
# Change this single variable to switch LLM providers
# Options: gemini-2.0-flash, gemini-1.5-pro, claude-sonnet-4, gpt-4o
ACTIVE_MODEL=gemini-2.0-flash

# ============================================================
# LLM API KEYS
# ============================================================
# Only the key for your ACTIVE_MODEL is required
# Get Gemini key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Get Claude key: https://console.anthropic.com/
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Get OpenAI key: https://platform.openai.com/api-keys
# OPENAI_API_KEY=your-openai-api-key-here

# ============================================================
# NETSUITE CONFIGURATION
# ============================================================
# Your NetSuite account ID (found in URL: xxxxxxx.app.netsuite.com)
NETSUITE_ACCOUNT_ID=your-account-id

# Token-Based Authentication credentials
# Create in: Setup > Users/Roles > Access Tokens
NETSUITE_CONSUMER_KEY=your-consumer-key
NETSUITE_CONSUMER_SECRET=your-consumer-secret
NETSUITE_TOKEN_ID=your-token-id
NETSUITE_TOKEN_SECRET=your-token-secret

# Your saved search internal ID (e.g., customsearch_my_report)
# Find this in the URL when viewing your saved search
NETSUITE_SAVED_SEARCH_ID=customsearch_your_saved_search

# ============================================================
# ONELOGIN SSO (Optional - for SSO authentication)
# ============================================================
# If using OneLogin for NetSuite authentication
# ONELOGIN_CLIENT_ID=your-onelogin-client-id
# ONELOGIN_CLIENT_SECRET=your-onelogin-client-secret
# ONELOGIN_SUBDOMAIN=your-company

# ============================================================
# SLACK CONFIGURATION
# ============================================================
# Create app at: https://api.slack.com/apps
# See src/integrations/slack_bot.py for detailed setup instructions

# Bot User OAuth Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# App Signing Secret (from Basic Information page)
SLACK_SIGNING_SECRET=your-signing-secret

# App-Level Token for Socket Mode (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token

# ============================================================
# EVALUATION THRESHOLDS
# ============================================================
# Minimum accuracy required for calculations (0.0 to 1.0)
# MINIMUM_ACCURACY_SCORE=0.85

# Minimum qualitative score required (0 to 10)
# MINIMUM_JUDGE_SCORE=7.0

# Maximum reflection iterations
# MAX_REFLECTION_ITERATIONS=3

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=INFO
